{
  "name": "czystepomniki-api",
  "version": "1.0.0",
  "description": "API server for Czyste Pomniki app",
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "prisma generate && next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "postbuild": "prisma db push && npm run seed",
    "migrate": "tsx scripts/migrate-to-prisma.ts",
    "db:reset": "prisma db push --force-reset",
    "db:generate": "prisma generate",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@react-email/render": "^0.0.15",
    "@vercel/blob": "^2.0.0",
    "better-sqlite3": "^9.4.3",
    "next": "^15.0.0",
    "prisma": "^6.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^4.0.0",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@react-email/components": "0.5.7",
    "@types/better-sqlite3": "^7.6.9",
    "@types/multer": "2.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "multer": "2.0.2",
    "react-email": "4.3.1",
    "typescript": "^5.0.0"
  }
}
